# ========================================
# VARIABLES DE ENTORNO PARA TRAVELPIN
# ========================================
# Copia este archivo como .env y configura tus valores

# Puerto del servidor (Railway lo asigna automáticamente)
PORT=4000

# Entorno
NODE_ENV=production

# ========== EMAIL (Gmail) ==========
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu-email@gmail.com
EMAIL_PASS=tu-contraseña-de-aplicacion

# ========== JWT ==========
JWT_SECRET=tu-clave-secreta-muy-larga-y-segura-cambiar-esto

# ========== BASE DE DATOS ==========
# Railway crea automáticamente el volumen para SQLite
DB_PATH=./data/BDTravelPin.db
